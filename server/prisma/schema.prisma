// Prisma schema for Supabase (Postgres)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Condition {
  NEW
  LIKE_NEW
  EXCELLENT
  GOOD
  FAIR
  NEEDS_WORK
}

model InventoryItem {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // High-level classification
  category    String
  subcategory String?

  // Make/Model
  make        String
  model       String

  // Usage metrics (one or both may be null depending on item type)
  mileage     Int?
  hours       Int?

  year        Int
  condition   Condition

  images      Image[]

  @@index([category])
  @@index([make])
  @@index([year])
}

model Image {
  id             String         @id @default(cuid())
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  item           InventoryItem  @relation(fields: [itemId], references: [id])
  itemId         String
  storagePath    String
  publicUrl      String
  orderIndex     Int            @default(0)

  @@index([itemId])
  @@index([orderIndex])
}

